doctype 5
html
	head
		title= tags.title
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		meta(name="description", content="#{tags.description}")
		meta(name="og:image", content="#{tags.og_image}")
		meta(name="og:image:type", content="#{tags.og_image_type}")
		meta(name="og:image:width", content="#{tags.og_image_width}")
		meta(name="og:image:height", content="#{tags.og_image_height}")
		meta(name="og:title", content="#{tags.og_title}")
		meta(name="og:url", content="#{tags.og_url}")
		meta(name="og:site_name", content="#{tags.og_site_name}")
		meta(name="og:type", content="#{tags.og_type}")
		link(rel="canonical", href="#{tags.og_url}")

		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="shortcut icon", href="images/gbp-favicon.ico")
		link(href='http://fonts.googleapis.com/css?family=Roboto:300&subset=latin-ext,latin', rel='stylesheet', type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
		link(rel='stylesheet', type='text/css', media='screen', href='stylesheets/foundation.css')
		link(rel='stylesheet', type='text/css', media='screen', href='stylesheets/gbp.css')
		script(type="text/javascript", src="js/vendor/modernizr.js")
		script(type="text/javascript", src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
		include shared/_ga_head

	body
		header
			img.banner(src="images/gbp_head_large.jpg", data-interchange="[images/gbp_head_large.jpg, (default)], [images/gbp_head_small.jpg, (small)], [images/gbp_head_medium.jpg, (medium)], [images/gbp_head_large.jpg, (large)]")	

		!= yield

		script(type="text/javascript", src="js/vendor/fastclick.js")
		script(type="text/javascript", src="js/foundation/foundation.js")
		script(type="text/javascript", src="js/foundation/foundation.interchange.js")
		script.
			$(document).foundation();

		include shared/_ga
