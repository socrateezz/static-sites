div#book
	div#content
		div.box.cover
			img.book_cover(src="images/#{book.cover_preview}", 
				alt="The Alderman book cover", width="212", height="303")
			h1 #{book.title}
			h2 by #{book.author}
			h3 
				a(href="#{book.amazon}", 
					onClick="outbound_link(this, 'Outbound Links', 'amazon.com'); return false;") On Amazon.com
			div.buy_button
				a(href="#{book.amazon}", 
					onClick="outbound_link(this, 'Outbound Links', 'amazon.com'); return false;") buy
			div.clear
		
		div.box
			h2 Synopsis
			!= book.synopsis

		div.box.desc
			h2 Description
			dl
				dt 
					span ISBN
				dd #{book.ISBN}
				dt 
					span Date First Published
				dd #{book.first_published}
				dt 
					span Current Edition
				dd #{book.current_edition}
				dt 
					span Cover
				dd #{book.cover_type}
				dt 
					span Dimensions
				dd #{book.dimensions}
				dt 
					span Pages
				dd #{book.pages}
				dt 
					span Editors
				dd #{book.editors}
				dt 
					span Cover Art, Title Art
				dd #{book.cover_art}
				dt 
					span Illustrations
				dd #{book.illustrations}
			div.clear
		div.clear
					
