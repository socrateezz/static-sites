div#entry
	div#book_cover
		div.img_box
			a(class="fancybox", rel="group", href="images/#{book.cover}")
				img(src="images/#{book.cover_preview}", alt="The Alderman book cover", width="212", height="303")

	div#book_detail
		h1 #{book.title}
		h2 by #{book.author}
		h3 #{book.price}
		p Every copy is signed by the author.
		div
			div.button.buy_button Buy
		div.hidden FREE
			div.button.buy_button Download Nook
		div.hidden	FREE
			div.button.buy_button Download Kindle
	div.clear
	div#book_description
		h3 Synopsis
		p #{book.synopsis}
		h3 Description
		dl
			dt 
				span ISBN
			dd #{book.ISBN}
			dt 
				span Date First Published
			dd #{book.first_published}
			dt 
				span Current Edition
			dd #{book.current_edition}
			dt 
				span Cover
			dd #{book.cover_type}
			dt 
				span Dimensions
			dd #{book.dimensions}
			dt 
				span Pages
			dd #{book.pages}
			dt 
				span Editors
			dd #{book.editors}
			dt 
				span Cover Art, Title Art
			dd #{book.cover_art}
			dt 
				span Illustrations
			dd #{book.illustrations}
		div.clear

link(rel="stylesheet", href="/js/fancybox/source/jquery.fancybox.css?v=2.1.3", type="text/css", media="screen")
script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
